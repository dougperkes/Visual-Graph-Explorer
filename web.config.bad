<?xml version="1.0" encoding="utf-8"?>
<configuration>
    <system.webServer>
    <rewrite>
        <rules>
        <rule name="Redirect to https">
            <match url="(.*)"/>
            <conditions>
            <add input="{HTTPS}" pattern="Off"/>
            <add input=”{REQUEST_METHOD}” pattern=”^get$|^head$” />
            </conditions>
            <action type="Redirect" url="https://{HTTP_HOST}/{R:1}"/>
        </rule>
        </rules>
    </rewrite>
    </system.webServer>
</configuration>